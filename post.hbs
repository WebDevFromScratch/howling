{{!< default}}

{{#post}}
  <article>
    <header>
      <header class="text-white pt-40 pb-10 lg:pt-64 lg:pb-16 bg-cover bg-center"
              style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6)), url({{feature_image}});">
        <h1 class="font-fira font-bold text-5xl text-center">{{title}}</h1>
        <h4 class="text-center" datetime="{{date format="YYYY-MM-DD"}}">
          {{date format="D MMMM YYYY"}}
          &nbsp;&nbsp;|&nbsp;&nbsp;
          {{#primary_tag}}
            <a href="{{url}}">#{{name}}</a>
          {{/primary_tag}}
        </h4>
      </header>
    </header>
    <section class="container mx-auto p-4 ghost-post-content">
      <div class="w-full bg-white rounded shadow py-20 px-24">
        {{content}}
      </div>
    </section>
  </article>
{{/post}}
