{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<header class="text-white py-20 lg:py-32 xl:py-32 bg-cover bg-center"
linear-gradient(#f7fafc, #2c7a7b) rgb(247,250,252) rgb(44,122,123)
        style="background-image: linear-gradient(rgba(44, 122, 123, 0.4), rgba(44, 122, 123, 0.4)), url({{@site.cover_image}});">
  <h1 class="font-fira font-bold text-5xl text-center">{{@blog.title}}</h1>
  <h2 class="font-sans text-2xl text-center">{{@blog.description}}</h2>
</header>

<main class="container mx-auto font-sans p-4">
  <div class="flex flex-wrap">
    {{#foreach posts}}
      <div class="group flex h-64 w-full mb-4 bg-white rounded hover:shadow-xl trans-slow">
        <div class="w-0 md:w-1/3 flex overflow-hidden rounded-l">
          <div class="w-full bg-cover bg-center trans-slow relative group-hover:scale-1-1"
            style="background-image: url({{img_url feature_image}});">
            <div class="overlay overlay-teal group-hover:overlay-none trans-slow"></div>
          </div>
        </div>

