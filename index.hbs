{{!< default}}

<header class="text-white pt-40 pb-10 lg:pt-48 lg:pb-20 bg-cover bg-center"
        style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5)), url({{@site.cover_image}});">
  <h1 class="font-fira font-bold text-5xl text-center">{{@blog.title}}</h1>
  <h2 class="font-sans text-2xl text-center">{{@blog.description}}</h2>
</header>

<main class="container mx-auto font-sans p-4">
  <div class="flex flex-wrap">
    {{#foreach posts}}
      <div class="group flex h-64 w-full mb-4 bg-white rounded shadow relative
                  hover:shadow-xl trans-slow">
        {{#if primary_tag}}
          <div class="absolute bottom-0 left-0 z-10 p-6">
            <a href="{{primary_tag.url}}">
              <span class="inline-block bg-orange-100 rounded-full px-3 py-1
                           text-sm text-orange-900 mr-2 group-hover:text-orange-100
                           group-hover:bg-orange-700 trans-slow">
                #{{primary_tag.name}}
              </span>
            </a>
          </div>
        {{/if}}
        <div class="absolute bottom-0 right-0 z-10 p-6">
          {{#has author="count:>1"}}
            <!-- TODO: multiple authors avatars -->
          {{else}}
            <div class="flex items-center">
              <div class="text-sm mr-4 text-right">
                {{#primary_author}}
                  <p class="text-gray-700 leading-none">
                    <a href="{{url}}">{{name}}</a>
                  </p>
                {{/primary_author}}
                <p class="text-gray-500">{{reading_time}}</p>
              </div>
              {{#primary_author}}
                <a href="{{url}}">
                  {{#if profile_image}}
                    <img class="w-10 h-10 rounded-full" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                  {{else}}
                    <img class="w-10 h-10 rounded-full" src="{{asset 'images/no-avatar.png'}}" alt="{{name}}" />
                  {{/if}}
                </a>
              {{/primary_author}}
            </div>
          {{/has}}
        </div>
        <div class="w-0 md:w-1/3 flex overflow-hidden rounded-l">
          <!-- TODO: optimize images (see Casper theme) -->
          <div class="w-full bg-cover bg-center trans-slow relative group-hover:scale-1-1"
            style="background-image: url({{img_url feature_image}});">
            <div class="overlay overlay-black-alpha group-hover:overlay-none trans-slow"></div>
          </div>
        </div>
        <div class="w-full md:w-2/3 p-6">
          <h1 class="font-bold font-fira text-2xl md:text-3xl mb-2 text-gray-800
                     group-hover:text-black trans-slow">
            <a href={{url}}>{{title}}</a>
          </h1>
          <p class="text-gray-800 text-base group-hover:text-black trans-slow">
            {{excerpt words="40"}}
          </p>
        </div>
      </div>
    {{/foreach}}
  </div>
</main>

<!-- Pagination block -->
{{pagination}}
