{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<header class="text-white py-32 bg-cover bg-center"
        style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url({{@site.cover_image}});">
  <h1 class="font-fira font-bold text-5xl text-center">{{@blog.title}}</h1>
  <h2 class="font-sans text-2xl text-center">{{@blog.description}}</h2>
</header>

<main class="container mx-auto font-sans py-4">
  <div class="flex flex-wrap">
    {{#foreach posts}}
      <div class="w-1/3 p-4 flex">
        <div class="rounded overflow-hidden shadow-lg">
          <!-- NOTE: srcset are taken from Casper theme. Maybe we should switch to tailwind breakpoints instead -->
          <img class="w-full"
              srcset="{{img_url feature_image size="s"}} 300w,
                      {{img_url feature_image size="m"}} 600w,
                      {{img_url feature_image size="l"}} 1000w,
                      {{img_url feature_image size="xl"}} 2000w"
              sizes="(max-width: 1000px) 400px, 700px"
              src="{{img_url feature_image size="m"}}"
              alt="{{title}}"
          />
          <div class="px-6 py-4">
            <div class="font-bold font-fira text-2xl mb-2"><a href={{url}}>{{title}}</a></div>
            <p class="text-gray-700 text-base">
              {{excerpt words="33"}}
            </p>
          </div>
          <div class="px-6 py-4">
            {{#foreach tags}}
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">{{name}}</span>
            {{/foreach}}
          </div>
        </div>
      </div>
    {{/foreach}}
  </div>
</main>

<!-- Pagination block -->
{{pagination}}
