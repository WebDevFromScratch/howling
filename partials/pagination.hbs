<!-- NOTE: for now, this pagination also acts as a footer.. probably not great -->
<footer class="bg-gradient-gray-200-to-teal-700 h-64">
  <nav class="pagination" role="navigation">
    <div class="container mx-auto mt-4 px-4 flex uppercase text-teal-700 font-semibold tracking-wide">
      <span class="w-1/3">
        {{#if prev}}
          <a class="newer-posts text-left" href="{{page_url prev}}">&larr; Newer Posts</a>
        {{/if}}
      </span>
      <span class="text-center w-1/3">Page {{page}} of {{pages}}</span>
      <span class="text-right w-1/3">
        {{#if next}}
          <a class="older-posts" href="{{page_url next}}">Older Posts &rarr;</a>
        {{/if}}
      </span>
    </div>
  </nav>
  <div class="container mx-auto mt-12 px-4">
    <hr class=" border-t border-gray-200 h-0 shadow-lg" />
    <div class="flex text-gray-200 mt-12 tracking-wide text-xs">
      <span class="w-1/2">Personal theme Â© 2019</span>
      <span class="w-1/2 text-right">Published with <a href="#">Ghost</a></span>
    </div>
  </div>
</footer>
